# Edge Service Environment Configuration
# Copy this file to .env and update values

# Camera Configuration
CAMERA_SOURCE_TYPE=file
CAMERA_RTSP_URL=rtsp://admin:password@192.168.1.100:554/stream1
CAMERA_DEMO_VIDEO_PATH=/app/demo_data/polytechnic_roundabout.mp4
CAMERA_DEVICE_ID=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# Intersection Configuration
INTERSECTION_ID=polytechnic-5way
INTERSECTION_NAME=Polytechnic Roundabout

# YOLO Configuration
YOLO_MODEL_PATH=/app/models/yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45
YOLO_USE_GPU=true
YOLO_HALF_PRECISION=true
YOLO_TENSORRT_OPTIMIZATION=false

# RL Controller Configuration
RL_MODEL_PATH=/app/models/traffic_rl_model.h5
RL_CONFIDENCE_THRESHOLD=0.7
RL_LEARNING_RATE=0.001
RL_EPSILON=0.1
RL_TRAINING_MODE=false

# Processing Configuration
PROCESSING_TARGET_FPS=10
PROCESSING_FRAME_SKIP=2
PROCESSING_INPUT_SIZE=640

# Communication Configuration
BACKEND_URL=http://backend:8080
WEBSOCKET_URL=ws://backend:8080/telemetry
WEBSOCKET_RECONNECT_INTERVAL=5
TELEMETRY_SEND_INTERVAL=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/edge.log

# Performance Configuration
ENABLE_PERFORMANCE_MONITORING=true
METRICS_COLLECTION_INTERVAL=10

# Emergency Configuration
EMERGENCY_PREEMPTION_DURATION=30
EMERGENCY_CONFIDENCE_THRESHOLD=0.8

# Safety Configuration
MIN_GREEN_TIME=10
MAX_GREEN_TIME=60
YELLOW_TIME=3
ALL_RED_TIME=2

# Hardware Configuration
USE_GPU=true
GPU_MEMORY_LIMIT=2048
CPU_THREADS=4

# Debug Configuration
ENABLE_DEBUG_VISUALIZATION=false
SAVE_DEBUG_FRAMES=false
DEBUG_OUTPUT_PATH=/app/debug/