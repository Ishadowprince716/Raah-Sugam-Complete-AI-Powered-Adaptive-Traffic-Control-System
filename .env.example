# Environment Configuration
# Copy this file to .env and update values for your deployment

# Global Configuration
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
POSTGRES_DB=raah_sugam
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/raah_sugam

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379

# Backend Configuration  
JWT_SECRET=your_jwt_secret_key_change_this_in_production
CORS_ORIGIN=http://localhost:3000,https://your-domain.com
BACKEND_PORT=8080

# Frontend Configuration
VITE_API_URL=http://localhost:8080
VITE_WS_URL=ws://localhost:8080

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=admin_password_here
GRAFANA_ROOT_URL=http://localhost:3001

# Networking
HTTP_PORT=80
HTTPS_PORT=443

# Jetson Deployment
JETSON_USER=nvidia
JETSON_IP=192.168.1.100

# Monitoring
PROMETHEUS_RETENTION=720h

# Security
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/ssl/certs/
SSL_KEY_PATH=/etc/ssl/private/